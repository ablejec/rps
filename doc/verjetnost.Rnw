%% |--------------------->>>>>>
\begin{frame}[fragile]
\frametitle{Simulacija z neenako verjetnostjo}
<<>>=
n <- 350
skoljka <- c("prazna","biser")
izid <- sample(skoljka,n,replace=TRUE,prob=c(8,2))
(t <- table(izid))
t["biser"]/sum(t)
@
\end{frame}
%% <<<<<<---------------------|

%% |--------------------->>>>>>
\begin{frame}[fragile]
\frametitle{Drug pristop}

<<>>=
p0 <- 0.2
izid <- runif(n)<=p0
(t <- table(izid))
t[2]/sum(t)
@
Z logiènimi vrednostmi lahko raèunamo:
<<>>=
sum(izid)
sum(izid)/length(izid)
@

\end{frame}
