\begin{frame}[fragile]
\frametitle{Negativna binomska porazdelitev}
$$X \sim negBin(n=80,p=0.2)$$
$$P(X = k) = {k-1 \choose n-1} p^n \cdot(1-p)^{k-n}$$

<<>>=
n <- 80
k <- 350
p <- 0.2
choose(k-1,n-1)*p^n*(1-p)^(k-n)
@
V R je funkcija parametrizirana na število neuspehov.
<<>>=
dnbinom(k-n,n,p)
pnbinom(k-n,n,p)-pnbinom(k-n-1,n,p)
@
$$P(X \leq 350)$$
<<>>=
pnbinom(k-n,n,p)
@
\end{frame}
%% <<<<<<---------------------|


%% |--------------------->>>>>>
\begin{frame}[fragile]
\frametitle{Normalna aproksimacija}
$$X \sim negBin(n=80,p=0.2)$$
$$E(X)=\frac{n}{p}=\frac{\Sexpr{n}}{\Sexpr{p}}=\Sexpr{n/p}$$
$$D(X)=\frac{80*0.8}{0.2^2}=1600$$
$$X \sim N(400,40^2)$$
$$P(X \leq 350)$$
<<>>=
pnorm(350,400,40)
@
\end{frame}
%% <<<<<<---------------------|

%% |--------------------->>>>>>
\begin{frame}[fragile]
\frametitle{Geometrijska porazdeitev}
<<>>=
n <- 80
@
$$X_k \sim geom(p=0.2),\  k= 1, 2, \ldots, \Sexpr{n}$$
Koliko poskusov do prvega uspeha
$$P(X = k)=(1-p)^{k-1}*p, k=1, 2, \ldots$$
\vspace{-1cm}
<<>>=
set.seed(789)
X <- rgeom(n,p=0.2)+1
X[1:5]
(Y <- sum(X))
@
Zakaj $+1$ ? Poglejte v pomoè funkcije \code{rgeom}.
\end{frame}
%% <<<<<<---------------------|

%% |--------------------->>>>>>
\begin{frame}[fragile]
\frametitle{Potapljaški poskus}
\vspace{-0.5cm}
<<fig=TRUE,height=4>>=
par (mar=c(3,3,2,1), mgp=c(2,.7,0))
X <- c(0,X)
plot(cumsum(X),0:n,type="s", ylab="Biserov", xlab="Število potopov")
points(cumsum(X[-1]),1:n,col="red",pch=16,cex=.5)

@
\end{frame}
